<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:padding="16dp"
    tools:context=".appointments.form.HotelAppointmentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Hotel_appointment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/making_appointment"
                android:textColor="@color/Cream"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/Background_component_selected"
                app:cardCornerRadius="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/Hotel_appointment_txtWarning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/infoWarning"
                        android:textColor="@color/Transparent"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/Hotel_appointment_yourInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/yourInfo"
                        android:textColor="@color/Cream"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_txtWarning" />

                    <TextView
                        android:id="@+id/Hotel_appointment_yourName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_yourInfo"
                        tools:text="SaÃºl Monroy" />

                    <TextView
                        android:id="@+id/Hotel_appointment_yourAddres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Cream"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_yourName"
                        tools:text="saulandresmm@gmail.com" />

                    <TextView
                        android:id="@+id/Hotel_appointment_yourCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_yourAddres"
                        tools:text="Chiquimula" />

                    <TextView
                        android:id="@+id/Hotel_appointment_yourPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_yourCity"
                        tools:text="+52 58811634" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pw_div_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/Cream"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_yourPhoneNumber" />

                    <TextView
                        android:id="@+id/Hotel_appointment_txtChosePet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/chosePet"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pw_div_1" />

                    <Spinner
                        android:id="@+id/Hotel_appointment_petSpinner"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_spinner_pet"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_txtChosePet" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pw_div_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/Cream"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_petSpinner" />

                    <TextView
                        android:id="@+id/Hotel_appointment_txtChoseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/choseStartDate"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pw_div_2" />

                    <EditText
                        android:id="@+id/Hotel_appointment_etDate"
                        android:layout_width="288dp"
                        android:layout_height="50dp"
                        android:clickable="false"
                        android:focusable="false"
                        style="@style/et_paddingStart"
                        android:background="@drawable/rounded_background_component_selected"
                        android:textStyle="bold|italic"
                        android:hint="@string/date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_txtChoseDate" />

                    <TextView
                        android:id="@+id/Hotel_appointment_txtChoseEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/choseEndDate"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_etDate" />

                    <EditText
                        android:id="@+id/Hotel_appointment_etEndDate"
                        android:layout_width="288dp"
                        android:layout_height="50dp"
                        android:clickable="false"
                        style="@style/et_paddingStart"
                        android:background="@drawable/rounded_background_component_selected"
                        android:textStyle="bold|italic"
                        android:focusable="false"
                        android:hint="@string/date"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_txtChoseEndDate" />
                    <TextView
                        android:id="@+id/Hotel_appointment_txtEstimated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/price"
                        android:textColor="@color/Cream"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_etEndDate" />

                    <TextView
                        android:id="@+id/Hotel_appointment_txtPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/Cream"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_txtEstimated"
                        tools:text="$36" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pw_div_3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        app:cardBackgroundColor="@color/Cream"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_txtPrice" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Hotel_appointment_cv_toDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="70dp"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pw_div_3">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:text="@string/goToDetails"
                                android:textColor="@color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/Hotel_appointment_goBack"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_back_row"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Hotel_appointment_cv_toDetails"
                        app:tint="@color/white" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>